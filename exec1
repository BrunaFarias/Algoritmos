/*Faça um programa que leia três notas, AP1, AP2 e AP3 e mostre a 
média ponderada entre elas, considerando peso 3 para AP1 e AP2 e peso 4 para AP3.*/
#include <stdio.h>
#include <stdlib.h>

int main()
{
	float ap1, ap2, ap3;
	float mPonderada=0;

	printf("Digite a nota da ap1:");
	scanf("%f", &ap1 );
	printf("Digite a nota da ap2:");
	scanf("%f", &ap2 );
	printf("Digite a nota da ap3:");
	scanf("%f", &ap3 );

	mPonderada = (3*ap1 + 3*ap2 + 4*ap3)/10;

	printf("A media do aluno eh: %2f",mPonderada );
	return 0;
}
