#include <stdio.h>
#include <stdlib.h>

int main(){

    float peso, altura, resultado;

    printf ("Informe seu peso: \n");
    scanf ("%f", &peso);
    printf ("Informe sua altura: \n");
    scanf ("%f", &altura);

    resultado = peso / (altura*altura);

    printf("Resultado IMC: %2.f\n", resultado);

    if (resultado <= 18.5){

        printf ("Abaixo do peso!");

       } if (resultado >= 18.6 && resultado <=24.9){

            printf ("Peso ideal, parabens!");

           } if (resultado >= 25.0 && resultado <= 29.9){

                printf ("Levemente acima do peso!");

               } if (resultado >= 30.0 && resultado <= 34.9){

                    printf ("Obesidade grau 1!");

                   } if (resultado >= 35.0 && resultado <= 39.9){

                        printf ("Obesidade grau II (SEVERA)");

                        } else if (resultado > 40){

                            printf ("Obesidade grau III (MORBIDA)");

                        }

}
